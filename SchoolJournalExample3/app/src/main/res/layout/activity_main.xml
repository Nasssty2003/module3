<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activities.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">
        <TextView
            android:id="@+id/schoolName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="schoolName"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/schoolAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="address"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/schoolTeachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="teachers"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/schoolLearners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="learners"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/schoolEmployers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="employers"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/schoolClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="classes"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/schoolElectives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="electives"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/schoolSections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sections"
            android:textSize="22sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ccccff">
        <Button
            android:id="@+id/teachersScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teachers"
            android:layout_weight="1"
            android:onClick="goToTeachersItems"/>
        <Button
            android:id="@+id/learnersScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="learners"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/employersScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="employers"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>